<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">
			Leave a Comment
		</h3>
	</div>
	<form method="post" action="/comments" enctype="application/x-www-form-urlencoded">
		<div class="panel-body form-horizontal">
              {{#if userName}}
                <p class="navbar-text">
                  <strong>Hi,</strong> {{userName}}
                </p>
                <ul class="nav navbar-nav navbar-right">
                  <li>
                    <a href="/signout">Log Out</a>
                  </li>
              {{else}}
				<ul class="nav navbar-nav navbar-right">
                  <li><a href="/signup">Sign Up</a></li>
				  <li><a href="/signin">Sign In</a></li>
              {{/if}}
          </ul>
		  </div>
			<div class="form-group col-md-12">
				
				<div class="col-md-10">
					<textarea class="form-control" name="comment" rows="2"></textarea>
				</div>
				<div class="form-group col-md-12">
					<div class="col-md-12 text-right">
						<button type="submit" id="login-btn" class-"btn btn-success" type="button"><i class="fa fa-cloud-upload "></i>Add a comment</button>
					</div>
				</div>
			</div>
		</form>
	</div>
	